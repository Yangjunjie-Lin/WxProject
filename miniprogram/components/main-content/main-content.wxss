.main-container {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding: 40rpx;
  }
  
  .user-section {
    background: white;
    border-radius: 24rpx;
    padding: 40rpx;
    margin-bottom: 40rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .user-info {
    display: flex;
    align-items: center;
  }
  
  .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    margin-right: 30rpx;
  }
  
  .user-details {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .nickname {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .login-info {
    font-size: 28rpx;
    color: #999;
  }
  
  .arrow {
    font-size: 32rpx;
    color: #ccc;
  }
  
  .menu-section, .action-section {
    background: white;
    border-radius: 24rpx;
    padding: 40rpx;
    margin-bottom: 40rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
  }
  
  .menu-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30rpx;
  }
  
  .menu-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx 20rpx;
    border-radius: 16rpx;
    background: #f8f9fa;
    position: relative;
  }
  
  .menu-icon {
    font-size: 48rpx;
    margin-bottom: 16rpx;
  }
  
  .menu-name {
    font-size: 28rpx;
    color: #333;
  }
  
  .menu-count {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    background: #ff4757;
    color: white;
    font-size: 20rpx;
    padding: 4rpx 8rpx;
    border-radius: 10rpx;
    min-width: 20rpx;
    text-align: center;
  }
  
  .action-buttons {
    display: flex;
    gap: 20rpx;
  }
  
  .action-btn {
    flex: 1;
    height: 80rpx;
    border-radius: 40rpx;
    font-size: 32rpx;
    border: none;
  }
  
  .action-btn.primary {
    background: #07c160;
    color: white;
  }
  
  .action-btn.secondary {
    background: #f8f9fa;
    color: #333;
    border: 2rpx solid #e9ecef;
  }
  
  .logout-section {
    text-align: center;
  }
  
  .logout-btn {
    width: 300rpx;
    height: 70rpx;
    background: #ff4757;
    color: white;
    border-radius: 35rpx;
    font-size: 28rpx;
    border: none;
  }