<view class="main-container">
  <!-- 用户信息区域 -->
  <view class="user-section">
    <view class="user-info" bindtap="goToProfile">
      <image 
        class="avatar" 
        src="{{userInfo.avatar || '/images/default-avatar.png'}}" 
        mode="aspectFill"
      ></image>
      <view class="user-details">
        <text class="nickname">{{userInfo.nickname || '微信用户'}}</text>
        <text class="login-info">登录次数: {{userInfo.loginCount || 0}}</text>
      </view>
      <text class="arrow">></text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="section-title">功能菜单</view>
    <view class="menu-grid">
      <view 
        class="menu-item" 
        wx:for="{{menuList}}" 
        wx:key="id"
        data-url="{{item.url}}"
        bindtap="navigateToPage"
      >
        <view class="menu-icon">{{item.icon}}</view>
        <text class="menu-name">{{item.name}}</text>
        <view class="menu-count" wx:if="{{item.count > 0}}">{{item.count}}</view>
      </view>
    </view>
  </view>

  <!-- 快捷操作 -->
  <view class="action-section">
    <view class="section-title">快捷操作</view>
    <view class="action-buttons">
      <button class="action-btn primary" data-url="/pages/posts/create/create" bindtap="navigateToPage">
        发布帖子
      </button>
      <button class="action-btn secondary" data-url="/pages/trade/create/create" bindtap="navigateToPage">
        发布交易
      </button>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="logout-section">
    <button class="logout-btn" bindtap="handleLogout">退出登录</button>
  </view>
</view>