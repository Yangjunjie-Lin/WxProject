.login-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #a33401 0%, #d47b27 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40rpx;
  }
  
  .login-header {
    text-align: center;
    margin-bottom: 120rpx;
  }
  
  .logo {
    width: 120rpx;
    height: 120rpx;
    border-radius: 24rpx;
    margin-bottom: 40rpx;
  }
  
  .app-name {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    color: white;
    margin-bottom: 20rpx;
  }
  
  .app-desc {
    display: block;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .login-btn {
    width: 600rpx;
    height: 88rpx;
    background-color: #07c160;
    color: white;
    border-radius: 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-weight: 500;
    box-shadow: 0 8rpx 32rpx rgba(7, 193, 96, 0.3);
    border: none;
    margin-bottom: 60rpx;
  }
  
  .login-btn::after {
    border: none;
  }

  
  .features {
    display: flex;
    justify-content: space-between;
    width: 600rpx;
    margin-bottom: 80rpx;
  }
  
  .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .feature-icon {
    font-size: 48rpx;
    margin-bottom: 16rpx;
  }
  
  .feature-text {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .privacy-tips {
    text-align: center;
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .privacy-tips .link {
    color: white;
    text-decoration: underline;
  }