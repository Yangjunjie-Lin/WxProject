.container {
  padding: 20rpx;
}

.search-bar {
  width: 434rpx; /* 750rpx - 202rpx(左) - 214rpx(右) = 334rpx，实际应为 750-202-214=334rpx，但你要整个搜索栏居中，建议直接用 margin 控制 */
  margin-left: 202rpx; /* 101pt = 202rpx */
  margin-right: 214rpx; /* 107pt = 214rpx */
  height: 108rpx; /* 54pt = 108rpx */
  display: flex;
  align-items: center;
  background: transparent;
  box-sizing: border-box;
}

/* 输入框 */
.search-input-wrapper {
  position: relative;
  width: 100%;
  height: 48rpx; /* 24pt = 48rpx */
  background: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  height: 48rpx;
  border: none;
  outline: none;
  background: transparent;
  font-size: 30rpx;
  box-sizing: border-box;
}

/* placeholder 字体大小 */
.search-input::placeholder {
  font-size: 20rpx;
  color: #999;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  display: block;
}

.post-list {
  margin-top: 20rpx;
}

.post-item {
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fafafa;
}

.post-title {
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.post-content {
  color: #666;
}