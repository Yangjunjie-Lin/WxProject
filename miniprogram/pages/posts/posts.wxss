.container {
  padding: 20rpx;
}

.search-bar {
  width: 434rpx; /* 750rpx - 202rpx(左) - 214rpx(右) = 334rpx，实际应为 750-202-214=334rpx，但你要整个搜索栏居中，建议直接用 margin 控制 */
  margin-left: 202rpx; /* 101pt = 202rpx */
  margin-right: 214rpx; /* 107pt = 214rpx */
  height: 108rpx; /* 54pt = 108rpx */
  display: flex;
  align-items: center;
  background: transparent;
  box-sizing: border-box;
}

/* 输入框 */
.search-input-wrapper {
  position: relative;
  width: 100%;
  height: 48rpx; /* 24pt = 48rpx */
  background: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  height: 48rpx;
  border: none;
  outline: none;
  background: transparent;
  font-size: 30rpx;
  box-sizing: border-box;
}

/* placeholder 字体大小 */
.search-input::placeholder {
  font-size: 20rpx;
  color: #999;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  display: block;
}

.post-list {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.post-item {
  border: 1px solid #eee;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.post-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.author-info {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
  border: 1px solid #f0f0f0;
}

.author-detail {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.author-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.author-bio {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-body {
  padding: 16rpx 0;
}

.post-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  display: block;
  margin-bottom: 16rpx;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 16rpx 0;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-top: 16rpx;
  text-align: justify;
  /* 文本超出三行显示省略号 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.post-footer {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.post-stats {
  display: flex;
  justify-content: flex-end;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-left: 32rpx;
}

.stat-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.stat-count {
  font-size: 24rpx;
  color: #999;
}

.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

.empty {
  margin-top: 200rpx;
  color: #666;
  font-size: 28rpx;
}