<view class="container">
  <!-- 检索栏（跟posts一致！！！）-->
  <view class="search-bar">
    <input 
      class="search-input" 
      type="text" 
      placeholder="..." 
      bindinput="onSearchInput"
    />
    <button class="search-btn" bindtap="onSearch">搜索</button>
  </view>

  <!-- 交易列表 -->
  <view class="trade-list">
    <block wx:for="{{trades}}" wx:key="id">
      <view class="trade-item" data-id="{{item.id}}" bindtap="viewTrade">
        <text class="trade-title">{{item.title}}</text>
        <text class="trade-price">{{item.price}}</text>
        <text class="trade-desc">{{item.description}}</text>
      </view>
    </block>
  </view>
</view>