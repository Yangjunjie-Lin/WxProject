.container {
  background-color: #f6f6f6;
  min-height: 100vh;
  padding-bottom: 24rpx;
}

/* 导航栏样式 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  z-index: 100;
  background-color: transparent;
}

.nav-back {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 87rpx;
  height: 32px;
  margin-left: 7px;
}

.back-arrow {
  font-size: 56rpx;
  color: #000000;
  font-weight: 200;
  line-height: 32px;
}

/* 内容区样式 */
.post-container {
  padding: 24rpx;
  padding-top: 0;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

/* 统一的帖子卡片 */
.post-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  min-width: 0; /* 防止内容撑开容器 */
  flex-shrink: 0; /* 防止容器被压缩 */
}

/* 作者信息 */
.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
  border: 1px solid #f0f0f0;
}

.author-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.author-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.author-bio {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

.post-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 24rpx;
  display: block;
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
  display: block;
  margin-bottom: 32rpx;
  width: 100%;
  box-sizing: border-box;
  word-wrap: break-word; /* 确保长单词会换行 */
  overflow-wrap: break-word; /* 现代浏览器的单词换行属性 */
  white-space: pre-wrap; /* 保留空格和换行符，但会自动换行 */
}

.no-comments-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  display: block;
  padding: 16rpx 0;
  opacity: 0.7;
}

/* 评论区样式 */
.comments-section {
  margin-top: 32rpx;
}

.comments-list {
  margin-top: 24rpx;
}

.comment-item {
  margin-bottom: 32rpx;
  position: relative;
}

.comment-item:last-child {
  margin-bottom: 0;
}

.comment-user-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.comment-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  margin-right: 12rpx;
  border: 1px solid #f0f0f0;
}

.comment-user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.comment-username {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 2rpx;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-left: 60rpx;
}

.comment-content text {
  display: inline;
  text-indent: 0;
  white-space: pre-wrap;
}

/* 次级评论样式 */
.sub-comments {
  margin-top: 16rpx;
  margin-left: 60rpx;
  position: relative;
}

.sub-comments::before {
  content: '';
  position: absolute;
  left: -24rpx;
  top: 0;
  bottom: 16rpx;
  width: 4rpx;
  background-color: #f0f0f0;
  border-radius: 2rpx;
}

.sub-comment {
  margin-bottom: 16rpx;
  padding-left: 16rpx;
  position: relative;
}

.sub-comment::before {
  content: '';
  position: absolute;
  left: -24rpx;
  top: 24rpx;
  width: 16rpx;
  height: 4rpx;
  background-color: #f0f0f0;
  border-radius: 2rpx;
}

.sub-comment .comment-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

.sub-comment .comment-content {
  font-size: 26rpx;
  margin-left: 52rpx;
}

.sub-comment .comment-username {
  font-size: 24rpx;
}

.sub-comment .comment-time {
  font-size: 20rpx;
}

/* 回复类评论样式 */
.reply-comments {
  margin-top: 12rpx;
  position: relative;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 12rpx;
}

.reply-comment {
  margin-bottom: 12rpx;
  position: relative;
  padding-left: 0;
}

.reply-comment .comment-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
}

.reply-comment .comment-content {
  font-size: 26rpx;
  margin-left: 48rpx;
  color: #666;
  display: flex;
  flex-wrap: wrap;
  align-items: baseline;
}

.reply-comment .comment-username {
  font-size: 24rpx;
  color: #333;
}

.reply-comment .comment-time {
  font-size: 22rpx;
  color: #999;
}

/* 分隔线 */
.reply-comment:not(:last-child) {
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 回复对象的@样式 */
.reply-comment .reply-to {
  color: #1890ff;
  font-weight: 500;
  margin-right: 8rpx;
  white-space: nowrap;
}

/* 回复内容样式 */
.reply-comment .reply-text {
  color: #333;
  flex: 1;
  word-break: break-all;
}

.no-comments-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  display: block;
  margin-top: 32rpx;
  opacity: 0.6;
}