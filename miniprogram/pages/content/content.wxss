.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 顶部栏 */
.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  height: 150rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.back-btn {
  margin-right: 20rpx;
  font-size: 32rpx;
  margin-top: 65rpx;
  color: #FF3D3D;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 内容区 */
.main {
  flex: 1;
  background: #f6f6f6;
  padding: 20rpx;
}

.post-detail {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.content {
  font-size: 30rpx;
  color: #333;
}

.comments {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.comments-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.comment-item {
  margin-bottom: 10rpx;
}

.comment-author {
  font-weight: bold;
  color: #007aff;
}

.comment-text {
  color: #333;
}

/* 底部栏 */
.footer {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.comment-input {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.footer-actions {
  display: flex;
  align-items: center;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
}